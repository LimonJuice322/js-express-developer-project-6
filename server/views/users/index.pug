extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.email')
        th= t('views.users.firstName')
        th= t('views.users.lastName')
        th= t('views.users.actions')
    tbody
      each user in users
        tr
          td= user.id
          td= user.email
          td= user.firstName
          td= user.lastName
          td
            div.d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=route('settings', { id: user.id }))= t('action.edit')
              +buttonTo(route('deleteUser', { id: user.id }), 'delete')(class="btn btn-danger" value=t('action.delete'))
